#Creating Dictionary
student = {
    "name": "Joziel",
    "age": 30,
    "course":"Economics"}

#Accessing Value in a Dictionary
print(student["name"])
print(student.get("course"))

#Changing and Adding in the List
student["age"]=29
student["university"]="PUP"
print(student)

#Nested Dictionaries
students = {
    "304":{ "name": "Terry", "grade": 98},
    "305":{ "name": "Kai", "grade": 89  }
    }

print(students["304"]["name"])
print(students["304"]["grade"])
print(students["305"]["name"])
print(students["305"]["grade"])

