#Creating Columns
import pandas as pd
df = pd.DataFrame({'price':[100,200,300],'quantity':[2,3,5]})
#Creating New Columns
df['total']=df['price']*df['quantity']
print(df)

#Creating Columns
import pandas as pd
df = pd.DataFrame({'flower':[2,4,6],'quantity':[1,3,5],'price':[10,20,30],'freebies':[1,2,3]})
#Creating New Columns
df['total']=df['flower']*df['quantity']
print(df)

#Rename
df.rename(columns={'flower':'candies','quantity':'qty'},inplace=True)
print(df)

#3 Drop Columns
df=df.drop(columns=['total'])
print(df)

#Apply Function to a Column
#Apply %22 discount
df['discount']=df['candies']*0.22
print(df)

#Conditional Column (if/else logic)
df['status']=df['qty'].apply(lambda x: 'Bulk' if x > 2 else 'Regular')
print(df)

#Column Aggregation - Summing Columns
total_price = df['candies'].sum()
average_price = df['candies'].mean()

print("Total",total_price)
print("Average", average_price)

#Combine Columns - Add Subtract or Divide
df['ratio']=df['candies']/df['discount']
print(df)

#reorder Columns
df = df[['qty','candies','discount','ratio','status']]
print(df)

#Column Statistics
print(df['candies'].describe())
print(df['qty'].describe())
print(df['status'].describe())


#EXPERIMENTAL

#Creating Columns
import pandas as pd
df = pd.DataFrame({'flower':[2,4,6],'quantity':[1,3,5],'price':[10,20,30],'freebies':[1,2,3]})
#Creating New Columns
df['total']=df['flower']*df['quantity']
print(df)

#Rename
df.rename(columns={'flower':'candies','quantity':'qty'},inplace=True)
print(df)

#reorder Columns
df = df[['qty','candies','freebies','price','total']]
print(df)

#Apply Function to a Column
#Apply %22 discount
df['discount']=df['candies']*0.22
print(df)

#Conditional Column (if/else logic)
df['status']=df['qty'].apply(lambda x: 'Bulk' if x > 2 else 'Regular')
print(df)

#reorder Columns
df = df[['qty','candies','price','total','status','discount','freebies']]
print(df)

#Combine Columns - Add Subtract or Divide
df['ratio']=df['candies']/df['discount']
print(df)

#reorder Columns
df = df[['qty','ratio','candies','price','total','status','discount','freebies']]
print(df)

#Combine Columns - Add Subtract or Divide
df['ratio']=df['candies']/df['discount']
print(df)

#Row Operations
#Load Data
df = pd.read_csv("sure_data.csv")
print(df.head())  #show first 5 rows
print(df.shape)   #rows x columns

#Display the data set
pd.set_option('display.max_rows', None)      #show all rows
pd.set_option('display.max_columns', None)   #show all columns
pd.set_option('display.width', None)      #no line wrapping
pd.set_option('display.max_colwidth', None)      #show full cell content

# ----- DISPLAY ALL DATA ----- 
print(df)

#Select Specific Rows
df.iloc[1]
df.iloc[10]
df.iloc[2:17]
df.iloc[5:13]
df.iloc[:17]

#Add New Row
new_row = {'y1':1.7,'y2':0.99,'x1':0.88,'x2':0.10,'x3':0.10}
df.loc[len(df)]=new_row
print(df)

#Delete Row
df = df.drop(199)  #remove row with index 2
df = df.reset_index(drop=True)  #Reset row numbering
print(df)
df = df.drop(198)  #remove row with index 2
df = df.reset_index(drop=True)  #Reset row numbering
print(df)

#Filter Rows (By Condition)
#By Age
df[df['y1']>2.571523]
df[df['y2']<-1.949036]
df[df['y1']==2.623457]
df[df['y1']==4.874797]

#Apply function to each row
df['y1']=df.apply(lambda row: 'Positive' if row ['y2']>0 else 'Negative', axis=1)
print(df)
df['y2']=df.apply(lambda row: 'Positive' if row ['y2']>0 else 'Negative', axis=1)
print(df)
